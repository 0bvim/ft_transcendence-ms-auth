{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice with Google Sign-In and JWT",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:report": "eslint . --ext .ts -f json -o eslint-report.json && eslint . --ext .ts -f html -o eslint-report.html",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "keywords": [
    "auth",
    "microservice",
    "fastify",
    "jwt",
    "google-auth"
  ],
  "author": "Vinicius Pereira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0bvim/ft_transcendence-ms-auth/issues"
  },
  "homepage": "https://github.com/0bvim/ft_transcendence-ms-auth#readme",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.9.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "google-auth-library": "^10.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@fastify/oauth2": "^8.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
